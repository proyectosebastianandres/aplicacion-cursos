{{>header }}

<div class="container text-center">
    <div class="row">
        <div class="col-md-12 formulariosIntroduccion">
          <h2>Registrarse</h2>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut posuere, dolor sagittis placerat 
              interdum, sem tortor mollis dui, et posuere tellus augue ac nibh. Etiam in suscipit nibh.
            </p>
        </div>
      </div>
</div>

<div class="container-fluid">
  <div class="formularios text-center shadow p-3 mb-5 bg-white">
        <form action="/registrarse" method="POST">
            <div class="form-group">
                <label>Nombre Completo</label>
                <input type="text" name="nombre" class="form-control" id="" placeholder="Andrés Serna" required>
            </div>
      
            <div class="form-group">
                <label>Correo electrónico</label>
                <input type="email" name="correo" class="form-control" id="" placeholder="example@gmail.com" required>
            </div>

            <div class="form-group">
                <label>Contraseña</label>
                <input type="text" name="contrasena" class="form-control" id="" placeholder="contraseña" required>
            </div>
      
            <div class="form-group">
                <label>Documento de identidad</label>
                <input type="text" name="dt" class="form-control" id="" placeholder="1020515425" required>
            </div>
      
            <div class="form-group">
                <label>Teléfono</label>
                <input type="text" name="tel" class="form-control" id="" placeholder="5969797" required>
            </div>
      
            <div class="form-group">
                <button type="submit" class="btn btn-dark">Realizar registro</button>
            </div>
        </form>
  </div>
 
</div>

        


  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>